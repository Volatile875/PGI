# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-in-production

# Database Configuration
# Format: postgresql://user:password@host:port/dbname
DATABASE_URL=postgresql://admin:admin_pass@db:5432/ai_assistant_db
DB_MIN_POOL=2
DB_MAX_POOL=10

# Security & Safety
SQL_SAFETY_STRICT_MODE=true
MAX_QUERY_RESULTS=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # options: json, console

# NLP Configuration (for future integration)
NLP_MODEL_PROVIDER=openai # or huggingface, local
NLP_API_KEY=your-api-key-here
